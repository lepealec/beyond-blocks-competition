>>> import random
>>> def ra(sum):
	sum==0
	a=random.randrange(1,sum)
	b=random.randrange(1,sum)
	c=sum-a-b
	while a**2+b**2!=c**2:
		a=random.randrange(1,sum)
		b=random.randrange(1,sum)
		c=sum-a-b
	return a,b,c,a*b*c,sum

>>> ra(1000)
(200, 375, 425, 31875000, 1000)
>>> 
